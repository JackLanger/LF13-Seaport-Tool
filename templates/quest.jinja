
{% macro edit_quest(quest) -%}
    <div class="container mt-5">
        <h1>Create Quest</h1>
        <!--    action="/quests/create" method="POST"-->
        <form id="createQuestForm" method="POST" action="/edit/{{ quest.id }}/">
            <div class="form-group">
                <label for="name">Quest Name:</label>
                <input type="text" id="name" name="name" class="form-control" value="{{ quest.title }}" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" class="form-control" rows="4"
                          value="{{ quest.description }}" required></textarea>
            </div>

            <!-- Resource Fields -->
            <div id="resource-fields">
                {% for resource in quest.resource %}

                    <div class="resource-field">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" name="resource_name" class="form-control" placeholder="Resource Name"
                                       value="{{ resource.name }}"
                                       required>
                            </div>
                            <div class="form-group col-md-4">
                                <input type="number" name="resource_amount" class="form-control" placeholder="Amount"
                                       value="{{ resource.amount }}" required>
                            </div>
                            <div class="form-group col-md-2">
                                <button type="button" class="btn btn-danger" onclick="removeResourceField(this)">
                                    Remove
                                </button>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>

            <button type="button" class="btn btn-success btn-rounded rounded-circle p-2 m-1"
                    onclick="addResourceField()">
                {{ round_icon('add-square.svg','Add new') }}
            </button>

            <button type="submit" class="btn btn-primary mt-3 float-right" onclick="sendFormData()">Save Quest</button>
        </form>
    </div>

{%- endmacro %}



