{% macro create_quest() -%}
    <div class="container mt-5">
        <h1>Create Quest</h1>
        <!--    action="/quests/create" method="POST"-->
        <form id="createQuestForm">
            <div class="form-group">
                <label for="name">Quest Name:</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" class="form-control" rows="4" required></textarea>
            </div>

            <!-- Resource Fields -->
            <div id="resource-fields">
                <div class="resource-field">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input type="text" name="resource_name" class="form-control" placeholder="Resource Name"
                                   required>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="number" name="resource_amount" class="form-control" placeholder="Amount"
                                   required>
                        </div>
                        <div class="form-group col-md-2">
                            <button type="button" class="btn btn-danger" onclick="removeResourceField(this)">Remove
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-success btn-rounded rounded-circle p-2 m-1"
                    onclick="addResourceField()">
                {{ round_icon('add-square.svg','Add new') }}
            </button>

            <button type="submit" class="btn btn-primary mt-3 float-right">Create Quest</button>
        </form>
    </div>
{%- endmacro %}


