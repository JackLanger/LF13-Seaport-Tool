{% macro ship_table(ships) -%}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>capacity</th>
            <th>Level</th>
        </tr>
        </thead>
        <tbody>
        {% for ship in ships %}
            <tr>
                <td>{{ ship.name }}</td>
                <td>{{ ship.capacity }} <img class="small-icon"
                                             src="{{ url_for('static',filename='resources/crate.svg') }}" alt="crate">
                </td>
                <td>
                    {% for sh in range(ship.level) %}
                        <img
                                class="small-icon"
                                alt="star"
                                src="{{ url_for('static', filename='resources/star.svg') }}"
                        ></img>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{%- endmacro %}



{# a ship card containing functionality for upgrading , deleting and editing #}
{% macro quest_card(quest) -%}
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <h2>{{ quest.name }}</h2>
                <table>
                    <tr>
                        <th>Resource</th>
                        <th>Amount</th>
                        {% for r in quest.resources %}
                            <td>{{ r.name }}</td>
                            <td>{{ r.amount }}</td>
                        {% endfor %}
                    </tr>
                </table>
            </div>
            <button onclick="edit_quest(this)"><img class="btn-icon"
                                                    src="{{ url_for('static', filename='resources/pen.svg') }}"
                                                    alt="edit"></button>
            <button onclick="delete_quest(this)"><img class="btn-icon"
                                                      src="{{ url_for('static', filename='resources/can.svg') }}"
                                                      alt="delete"></button>
        </div>
    </div>
{%- endmacro %}